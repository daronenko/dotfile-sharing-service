<%= stylesheet_link_tag('home') %>
<div class="content">
  <div class="header">
    <div class="title"><%= t('global.title') %></div><br>
    <div class="subtitle"><%= t('.subtitle') %></div>
  </div>
  <div class="actions">
    <div>
      <%= link_to t('header.explore'), dotfiles_path, class: "explore-btn btn btn-primary shadow" %>
      <% if user_signed_in? %>
        <%= link_to t('header.log_in'), dotfiles_path, class: "log-in-btn btn btn-outline-secondary" %>
      <% else %>
        <%= link_to t('header.log_in'), new_user_session_path, class: "log-in-btn btn btn-outline-secondary" %>
      <% end %>
    </div>
  </div>
</div>
