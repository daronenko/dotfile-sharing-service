<div style="width: 300px; margin: 0; position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%)">
  <div style="width: 300px; margin: 0; position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%)">
    <h2 class="text-center fs-1">Log In</h2><br>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-3">
        <input type="text" class="form-control" id="login" name="user[login]" autofocus: true placeholder="Username or Email" %>
      </div>

      <div class="mb-3">
        <input type="password" class="form-control" id="password" name="user[password]" autocomplete="current-password" placeholder="Password">
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-3">
          <div class="form-check">
            <input type="checkbox" class="form-check-input" id="remember_me" name="user[remember_me]" value="remember_me">
            <label class="form-check-label" for="remember_me">Remember me</label>
          </div>
        </div>
      <% end %>

      <div class="d-flex justify-content-center">
        <%= f.submit "Log In", class: "btn btn-primary", style: "width: 100%" %>
      </div>
    <% end %>

    <br>
    <%= render "devise/shared/links" %>
  </div>
</div>
