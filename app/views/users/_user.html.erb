<div id="<%= dom_id user %>" class="card">
  <div class="card-header">
    <%= link_to "@#{user.username}", user, class: "text-decoration-none fw-bold fs-4 text-secondary" %>
  </div>

  <div class="card-body">
    <div>
      <span class="fw-semibold"><%= t('forms.user.email') %>:</span> <%= user.email %>
    </div>
  </div>
</div>
<% if @user == current_user %>
  <div>
    <%= link_to t('forms.user.edit'), edit_user_registration_path, class: "btn btn-secondary mt-3" %>
  </div>
<% end %>
