<p style="color: green"><%= notice %></p>

<h1>Dotfiles</h1>

<%= search_form_for @q, data: { turbo_frame: :results } do |f| %>
  <%= f.label :title_or_description_or_config_type_or_user_username_cont %>
  <%= f.search_field :title_or_description_or_config_type_or_user_username_cont,
    oninput: 'this.form.requestSubmit()', autofocus: true, autocomplete: 'off' %>
<% end %>

<%= turbo_frame_tag :results, data: { turbo_action: 'advance' } do %>
  <div id="dotfiles"></div>
  <%= turbo_frame_tag :pagination, loading: :lazy,
    src: dotfiles_path(format: :turbo_stream, q: params[:q]&.to_unsafe_h) %>
<% end %>

<%= link_to "New dotfile", new_dotfile_path %>
